<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UpcomingTripsItem">

        <androidx.cardview.widget.CardView
            android:id="@+id/fuck_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5FB3F5"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/up_src"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:fontFamily="@font/autour_one"
                    android:text="Mathura"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"></EditText>

                <EditText
                    android:id="@+id/up_dest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:fontFamily="@font/autour_one"
                    android:text="Allahabad"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"></EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fuck_id"
            android:id="@+id/fuck_id1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FA5262"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/autour_one"
                            android:text="Budget Details"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"></TextView>

                        <EditText
                            android:id="@+id/budget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="Add your details here"
                            android:textColor="@android:color/white"
                            android:textSize="12dp"></EditText>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#074CF7">

                        <TextView
                            android:id="@+id/visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/autour_one"
                            android:text="Places To Visit"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"></TextView>

                        <ListView
                            android:id="@+id/places_to_visit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/visit"
                            android:layout_marginTop="7dp"
                            android:divider="@null"
                            android:dividerHeight="9dp"></ListView>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/places_fab"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:src="@drawable/edit"></com.google.android.material.floatingactionbutton.FloatingActionButton>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fuck_id2"
                android:layout_weight=".5">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="364dp"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AC20F7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/things"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/autour_one"
                            android:text="Things To Carry"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"></TextView>

                        <ListView
                            android:id="@+id/things_to_carry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/things"
                            android:layout_marginTop="7dp"
                            android:divider="@null"
                            android:dividerHeight="9dp"></ListView>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/things_fab"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:src="@drawable/edit"></com.google.android.material.floatingactionbutton.FloatingActionButton>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/fuck_id1"
            android:layout_margin="8dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#F45765"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="Add Schedule"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/autour_one"
                    ></TextView>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:divider="@null"
                android:id="@+id/events_lv"
                android:nestedScrollingEnabled="true"
                ></ListView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/events_fab"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/edit"></com.google.android.material.floatingactionbutton.FloatingActionButton>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>