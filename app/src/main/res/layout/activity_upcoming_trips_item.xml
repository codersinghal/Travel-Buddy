<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UpcomingTripsItem">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardElevation="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="#5FB3F5"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:id="@+id/up_src"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:fontFamily="@font/autour_one"
                android:text="Mathura"
                android:textColor="@android:color/white"
                android:textSize="25dp"></EditText>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@null"
                android:textSize="25dp"
                android:id="@+id/up_dest"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/autour_one"
                android:layout_margin="10dp"
                android:text="Allahabad"
                ></EditText>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FA5262"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget Details"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/autour_one"
                    ></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@android:color/white"
                    android:hint="Add your details here"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:id="@+id/budget"
                    ></EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#074CF7"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Places To Visit"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/autour_one"
                    android:layout_marginTop="7dp"
                    android:id="@+id/visit"
                    ></TextView>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/visit"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:id="@+id/places_to_visit"
                    ></ListView>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="12dp"
                    android:id="@+id/places_fab"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    ></com.google.android.material.floatingactionbutton.FloatingActionButton>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="416dp"
                android:layout_margin="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AC20F7"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Things To Carry"
                        android:textSize="15dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/autour_one"
                        android:layout_marginTop="7dp"
                        android:id="@+id/things"
                        ></TextView>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/things"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:id="@+id/things_to_carry"
                        ></ListView>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:id="@+id/things_fab"
                        android:layout_margin="12dp"
                        android:src="@drawable/ic_add_black_24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        ></com.google.android.material.floatingactionbutton.FloatingActionButton>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
