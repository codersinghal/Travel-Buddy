<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#067AF9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:id="@+id/src_to_dest"
                    android:layout_gravity="left"
                    android:text="Mathura To Allahabad"></EditText>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/expenditure"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="10000" />

                <ImageView
                    android:id="@+id/expenimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="67dp"
                    android:src="@drawable/expen" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cal"
                    android:layout_marginLeft="10dp"
                    ></ImageView>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/02/20"
                    android:textStyle="bold"
                    android:background="@null"
                    android:minWidth="30dp"
                    android:id="@+id/stdate"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    ></EditText>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/02/20"
                    android:background="@null"
                    android:minWidth="30dp"
                    android:textSize="15dp"
                    android:id="@+id/endate"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    ></EditText>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    ></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/review"
                    android:text="most awaited journey"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:textStyle="italic"
                    android:textSize="15dp"
                    android:textColor="#606061"
                    ></EditText>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewimg"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>